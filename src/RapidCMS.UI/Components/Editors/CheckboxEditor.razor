@inherits BasePropertyEditor

<div class="form-check">
    <input checked=@GetValueAsObject()
           @onchange=@(args => SetValueFromObject(((bool?)args.Value) ?? false))
           type="checkbox"
           disabled=@IsDisabled
           class="form-check-input position-static @(CssHelper.GetValidationClass(State))" />

    <label class="form-check-label">&nbsp;</label>

    @foreach (var message in GetValidationMessages())
    {
        <div class="invalid-feedback">
            @message
        </div>
    }
</div>