@inject ITreeService TreeService

@if (UI == null)
{
    <li>Loading tree..</li>
}
else if (!string.IsNullOrWhiteSpace(error))
{
    <li>@error</li>
}
else
{
    <li class="nav-item">
        <NavigationLink NavigateTo="@UI.NavigateTo"><Icon Name="@UI.Icon" Color="@UI.Color" /> @UI.Name</NavigationLink>
    </li>
}

@code {

    TreePageUI? UI;
    string? error;

    protected override async Task OnParametersSetAsync()
    {
        try
        {
            UI = await TreeService.GetPageAsync(PageAlias);
        }
        catch (Exception ex)
        {
            UI = null;
            error = ex.Message;
        }

        StateHasChanged();
    }

    [Parameter] public string PageAlias { get; set; } = default!;
}
