@inherits BasePropertyEditor

<textarea value=@GetValueAsString()
          @onchange=@(args => SetValueFromStringAsync(((string?)args.Value) ?? ""))
          disabled=@IsDisabled
          placeholder=@Placeholder
          class="form-control @(CssHelper.GetValidationClass(State))"
          style="height: 500px !important;"></textarea>

@foreach (var message in GetValidationMessages())
{
    <div class="invalid-feedback">
        @message
    </div>
}